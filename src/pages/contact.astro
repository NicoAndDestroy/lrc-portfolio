---
import Layout from "../layouts/Layout.astro";
import MiFoto from "../assets/img/MiFoto.jpg";
import CopyMail from "../components/links/copyMail.jsx";
import Antigravity from "../components/background/Antigravity.jsx";
import { FaLinkedin, FaGithub, FaEnvelope } from "react-icons/fa";

const links = [
  {
    href: "https://www.linkedin.com/in/nicolas-morales-663297a3/",
    label: "LinkedIn",
    icon: FaLinkedin,
  },
  {
    href: "https://github.com/NicoAndDestroy",
    label: "GitHub",
    icon: FaGithub,
  },
  {
    href: "mailto:jnicolasmoraless@hotmail.com",
    label: "Email",
    icon: FaEnvelope,
  },
];
---

<Layout>
  <Antigravity client:load />
  <section
    class="relative flex min-h-screen flex-col items-center justify-center px-6 text-white"
  >
  

    <!-- Header -->
    <div class="relative z-10 mb-12 text-center max-w-xl">
      <div class="relative mx-auto mb-6 flex items-center justify-center">
        <div class="h-45 w-45 rounded-full overflow-hidden z-10">
<img
  src={MiFoto.src}
  alt="Photo of Nicolas Morales"
  class="h-full w-full object-cover shadow-lg"
  style="object-position: center 30%;"
/>
</div>

        <!-- Circular text -->
        <svg
          viewBox="0 0 200 200"
          class="absolute h-70 w-70 animate-spin-slow opacity-80"
          aria-hidden="true"
        >
          <path
            id="circlePathText"
            d="M100,100 m-77,0 a77,77 0 1,1 154,0 a77,77 0 1,1 -154,0"
            fill="none"
          />
          <text fill="#69c7c7" font-size="16" font-weight="600">
            <textPath href="#circlePathText">
              ✦ Open to new opportunities ✦ Let’s work together
            </textPath>
          </text>
        </svg>
      </div>

      <h1 class="text-3xl md:text-4xl font-bold">
        Let’s build something great
      </h1>

      <p class="mt-4 text-gray-400">
        I’m currently open to remote opportunities and collaborations.
        Feel free to reach out — I’m always happy to connect.
      </p>
    </div>

    <!-- Copy Email -->
    <div class="relative z-10">
  <CopyMail client:visible />
</div>

    <!-- Links -->
    <div class="relative z-10 mt-8 w-full max-w-md space-y-4">
      {
        links.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center justify-center gap-3 rounded-lg bg-primary px-6 py-3 font-semibold text-white transition-all
              hover:bg-secondary hover:-translate-y-0.5
              drop-shadow-[2px_2px_0_#0debd8] active:translate-y-0"
          >
            <link.icon className="text-xl opacity-90 group-hover:scale-110 transition-transform" />
            {link.label}
          </a>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .animate-spin-slow {
    animation: spin 28s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>
