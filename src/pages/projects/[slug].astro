---
import { projects } from "../../data/projectsAboutData.js";

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);

if (!project) {
  return Astro.redirect("/projects");
}
---

<main class="mx-auto max-w-3xl px-6 py-12 text-white">
  <h1 class="text-4xl font-bold">{project.titulo}</h1>
  <p class="mt-3 text-gray-300">{project.resumen}</p>

 <img
  src={project.imagen}
  alt={`Project: ${project.titulo}`}
  class="mt-8 w-full rounded-2xl"
  loading="lazy"
/>

  {project.proceso?.length > 0 && (
    <>
      <h2 class="mt-10 text-2xl font-semibold">Process</h2>
      <ul class="mt-3 list-disc pl-6 text-gray-300">
        {project.proceso.map((step) => <li>{step}</li>)}
      </ul>
    </>
  )}

  <div class="mt-10 flex gap-3">
    {project.demo && (
      <a class="rounded-md border px-4 py-2" href={project.demo} target="_blank" rel="noopener">
        Live
      </a>
    )}
    {project.codigo && (
      <a class="rounded-md border px-4 py-2" href={project.codigo} target="_blank" rel="noopener">
        Code
      </a>
    )}
  </div>
</main>
