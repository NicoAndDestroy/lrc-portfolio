---
import ServiceCard from "./ServiceCard.astro";
import { FaLaptopCode, FaBolt, FaRocket } from "react-icons/fa";
---

<section class="site-container mt-14 mx-auto max-w-6xl px-4">
  <h2
    class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
  >
    <span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
    <span class="drop-shadow-[2px_2px_0_#7836cf]">Services</span>
  </h2>

  <div class="mt-10 grid gap-6 md:grid-cols-3">
    
    <!-- Service 1: Front-End Development -->
    <ServiceCard
      icon={FaLaptopCode}
      title="Front-End Development"
      description="I build fast, accessible, and modern interfaces using React, Astro, TypeScript, Tailwind, Bootstrap, and clean semantic HTML."
    />

    <!-- Service 2: Web Design & UX/UI -->
    <ServiceCard
      icon={FaBolt}
      title="Web Design & UX/UI"
      description="Creation of intuitive, visually appealing, and user-centered designs. I focus on usability, accessibility (WCAG AA), and smooth interaction patterns."
    />

    <!-- Service 3: Web Migrations & Optimization -->
    <ServiceCard
      icon={FaRocket}
      title="Web Migrations & Optimization"
      description="I modernize legacy websites by refactoring layouts, improving SEO, enhancing performance, and implementing scalable component-based architectures."
    />
  </div>
</section>
