---
const technologies = [
  // UX / UI
  "figma",
  "design-systems",
  "accessibility",
  "responsive-design",
  "interaction-design",
  "usability",

  // UI / Front-End   "react",   "typeScript",   "tailwindcss",

  "HTML5",
  "CSS3",
  "javaScript",
  "astro",
  "bootstrap",
  "git",
];
---

<div class="relative overflow-x-hidden px-8 py-8">
  <div class="animate-scroll hover:animate-paused flex w-max gap-12 md:gap-20">
    {
      technologies.concat(technologies, technologies).map((tech) => (
        <div class="group flex items-center gap-2 transition-all duration-300">
          <img
            src={`/svg/${tech}.svg`}
            alt={tech}
            class="h-7 w-auto object-contain  transition-transform group-hover:scale-110"
            width="30"
            height="30"
            loading="lazy"
          />
          <span
            class="text-lg font-medium text-white"
            style="text-shadow: 0 0 6px oklch(0 0 0 / 0.45);"
          >
            {tech}
          </span>
        </div>
      ))
    }
  </div>
</div>

<div class="mt-6 flex flex-wrap justify-center gap-3 text-sm text-gray-300">
  <span class="rounded-full border border-white/20 px-3 py-1">
    Accessibility (WCAG)
  </span>
  <span class="rounded-full border border-white/20 px-3 py-1">
    Design Systems
  </span>
  <span class="rounded-full border border-white/20 px-3 py-1">
    Interaction Design
  </span>
  <span class="rounded-full border border-white/20 px-3 py-1">
    Responsive Design
  </span>
  <span class="rounded-full border border-white/20 px-3 py-1">
    Usability & UX Thinking
  </span>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 80s;
    }
  }
</style>
