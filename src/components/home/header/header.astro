---
import HeroScroll from "./HeroScroll.jsx";
import SocialIcons from "../../commons/socialIcons/socialIcons.jsx";
import TypeEfect from "./typeEfect.jsx";
---

<HeroScroll client:load>
  <header
    class="relative h-screen overflow-hidden"
    style="background-color: oklch(0.36 0.01 269.99);"
  >
    <!-- Background blobs -->
    <div class="absolute inset-0 grid grid-cols-2 pointer-events-none">
      <div class="animate-gradientMove h-80 bg-linear-to-br from-[#982cf0] to-[#581f86] opacity-30 blur-[120px]"></div>
      <div class="animate-gradientMove2 h-80 bg-linear-to-br from-[#277752] to-[#02ffee] opacity-30 blur-[120px]"></div>
    </div>

    <!-- Content -->
    <main class="relative z-10 flex h-full flex-col items-center justify-center px-4 text-center">
      <h1 class="mt-10 text-4xl font-bold text-white text-shadow md:text-7xl">
        Hi! I'm Nicolas Morales
      </h1>

      <TypeEfect client:visible />

      <p class="mt-3 max-w-sm text-xs font-semibold text-white md:max-w-xl md:text-xl">
        Discover my projects, learn more about what I do, and reach out whenever
        you're ready â€” I'm always just a message away.
      </p>

      <SocialIcons client:visible />

      <a
        href="/contact"
        class="mt-3 rounded-3xl bg-primary px-6 py-3 font-semibold text-white transition-all duration-150
        drop-shadow-[2px_2px_0_#0debd8] hover:bg-secondary active:translate-0.5 active:drop-shadow-none"
      >
        Contact me
      </a>
    </main>
  </header>
</HeroScroll>
