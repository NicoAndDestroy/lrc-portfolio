---
import StoryPin from "./StoryPin.jsx";
---

<StoryPin client:load>
  <div class="relative mx-auto w-full max-w-3xl px-6 text-center">
    <!-- Indicador narrativo (global, discreto) -->
    <nav class="story-indicator" aria-label="Story progress">
      <button class="story-dot" type="button" aria-label="Step 1"></button>
      <button class="story-dot" type="button" aria-label="Step 2"></button>
      <button class="story-dot" type="button" aria-label="Step 3"></button>
    </nav>

    <!-- STEP 1 -->
    <div class="story-step story-step--active">
      <div class="story-visual" aria-hidden="true">
        <!-- Geométrico -->
        <svg class="story-svg story-svg--geo" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2">
          <rect x="3" y="3" width="18" height="18" rx="2" />
          <path d="M3 9h18M9 3v18" />
        </svg>
        <!-- Orgánico -->
        <svg class="story-svg story-svg--org" viewBox="0 0 200 200" fill="none">
          <path
            d="M20,120 C40,40 90,30 120,60 C150,90 170,70 180,50"
            stroke="currentColor" stroke-width="2" opacity="1"
          />
          <path
            d="M30,150 C60,110 110,120 140,140 C165,155 180,140 190,120"
            stroke="currentColor" stroke-width="2" opacity="0.8"
          />
        </svg>
      </div>

      <h2 class="story-title">I design experiences</h2>
      <p class="story-text">
        Interfaces that feel intuitive, fast and human.
      </p>
    </div>

    <!-- STEP 2 -->
    <div class="story-step absolute inset-0">
      <div class="story-visual" aria-hidden="true">
        <!-- Geométrico -->
        <svg class="story-svg story-svg--geo" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2">
          <path d="M8 7h8M6 11h12M8 15h8" />
          <path d="M4 4h16v16H4z" />
        </svg>
        <!-- Orgánico -->
        <svg class="story-svg story-svg--org" viewBox="0 0 200 200" fill="none">
          <path
            d="M20,80 C60,60 90,90 120,80 C150,70 170,40 190,60"
            stroke="currentColor" stroke-width="2" opacity="1"
          />
          <path
            d="M10,110 C40,140 90,130 120,110 C150,90 170,110 190,130"
            stroke="currentColor" stroke-width="2" opacity="0.8"
          />
        </svg>
      </div>

      <h2 class="story-title">I build with intention</h2>
      <p class="story-text">
        Clean code, scalable systems and real-world constraints.
      </p>
    </div>

    <!-- STEP 3 -->
    <div class="story-step absolute inset-0">
      <div class="story-visual" aria-hidden="true">
        <!-- Geométrico -->
        <svg class="story-svg story-svg--geo" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2">
          <path d="M7 8c2-3 8-3 10 0" />
          <path d="M5 12c3 4 11 4 14 0" />
          <path d="M7 16c2 3 8 3 10 0" />
        </svg>
        <!-- Orgánico -->
        <svg class="story-svg story-svg--org" viewBox="0 0 200 200" fill="none">
          <path
            d="M15,120 C40,90 80,140 110,110 C140,80 165,110 190,85"
            stroke="currentColor" stroke-width="2" opacity="1"
          />
          <path
            d="M10,70 C45,40 85,80 120,60 C150,45 170,60 190,40"
            stroke="currentColor" stroke-width="2" opacity="0.8"
          />
        </svg>
      </div>

      <h2 class="story-title">I care about storytelling</h2>
      <p class="story-text">
        Because products are remembered by how they feel.
      </p>
    </div>
  </div>
</StoryPin>

<style>
  /* Tip: si ya usas Tailwind, esto es “mínimo necesario” para el componente */
  .story-title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin: 0.25rem 0 0.75rem;
  }

  .story-text {
    max-width: 44rem;
    margin: 0 auto;
    color: rgba(209, 213, 219, 0.95);
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .story-visual {
    position: relative;
    width: 104px;
    height: 104px;
    margin: 0 auto 1rem;
    color: rgba(255, 255, 255, 0.22);
  }

  .story-svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .story-svg--geo {
    opacity: 0.9;
  }

  .story-svg--org {
    opacity: 0.55;
    transform: rotate(-6deg) scale(1.05);
    filter: blur(0.2px);
  }

  /* Indicador narrativo */
  .story-indicator {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    z-index: 20;
  }

  .story-dot {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.45);
    background: rgba(255, 255, 255, 0.35);
    cursor: default;
  }

  /* Mobile: indicador más discreto */
  @media (max-width: 640px) {
    .story-indicator {
      right: 0.25rem;
      gap: 0.6rem;
    }
    .story-visual {
      width: 88px;
      height: 88px;
    }
  }
</style>
